#
# Aliases
#
# This file is loaded by .zshrc.

# Git
alias git='hub'
alias gf='git fetch && git diff HEAD..FETCH_HEAD'
alias gmf='git merge FETCH_HEAD --ff'
alias gs='git status'
alias gp='git push'
alias gc='git commit -s'
alias gco='git checkout'
alias gm='git merge'
alias gb='git branch'
alias gr='git reset'
alias gsh='git stash'
alias gsp='git stash pop'
alias gam='git commit --amend'
alias grt='git remote'
alias gup='git pull upstream master'
alias grb='git rebase -i'

# AWS CLI
alias ec2ls="aws ec2 describe-instances \
  --output table \
  --query 'Reservations[].Instances[].{ \
    Name: Tags[?Key==\`Name\`].Value|[0], \
    ID: InstanceId, \
    State: State.Name, \
    IP: PublicIpAddress, \
    Type: InstanceType \
  }'"
alias ec2ls-sg="aws ec2 describe-security-groups \
  --output table \
  --query 'SecurityGroups[].{ \
    Desc: Description, \
    ID: GroupId, \
    Name: GroupName, \
    Port: IpPermissions[0].FromPort, \
    CIDR: join(\`, \`, IpPermissions[].IpRanges[].CidrIp|[0:2]) \
  }'"

# MFA ($MFA_KEY has to be set via direnv)
alias mfa="oathtool --totp -b $MFA_KEY | tee /dev/tty | pbcopy"
