#!/usr/bin/env bash
set -u

DIR=$(cd "$(dirname $0)" && pwd)
FILES=(
  gitconfig
  gitignore_global
  tmux.conf
  vimrc
  gvimrc
  zpreztorc
  zsh*
)

for f in "${FILES[@]}"; do
  src=$DIR/$f
  dst=$HOME/.$f

  # skip if already exists
  [[ -f "$dst" ]] && continue

  ln -s "$src" "$dst"
  echo "Created symlink '$src' => '$dst'"
done
