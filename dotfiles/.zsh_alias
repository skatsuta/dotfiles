#
# Aliases
#
# This file is loaded by .zshrc.

exist() {
  command -v $* > /dev/null
}

# General
alias la='ll -a'
alias cp='cp -i'
alias rm='rm -i'
alias m='make'

# zsh
alias sz="source $HOME/.zshrc"
alias vz="vim $HOME/.zshrc"

# Vim (Neovim)
if exist nvim; then
  alias vi='nvim'
  alias vr='nvim -R'
  alias vf='nvim $(fzf)'
fi

# Git
if exist hub; then
  alias git='hub'
fi
alias g='git'
alias gf='git fetch && git diff HEAD..FETCH_HEAD'
alias gup='git pull upstream master'
alias t='tig'

# eza
if exist eza; then
  alias ls='eza -F'
  alias l='eza -1a'
  alias lt='eza --tree --ignore-glob="__pycache__"'
fi

# Docker
if exist docker; then
  alias d='docker'
  alias dc='docker compose'
fi
alias drun='docker container run --rm --mount type=bind,source=$PWD,target=/tmp,consistency=delegated --workdir /tmp'

# Python
alias py='python'
alias po='poetry'

# curl
alias curl2='curl --compressed --fail --location --no-progress-meter'

# Others
alias 2fac='2fa -clip'
alias de='direnv'
alias sl3='sqlite3 -column -header'
alias tf='terraform'
