#
# Aliases
#
# This file is loaded by .zshrc.

exist() {
  command -v $* > /dev/null
}

# General
alias lt='ls -t'
alias rm='rm -i'
alias cp='cp -i'
alias mk='make'

# zsh
alias sz="source $HOME/.zshrc"
alias zc="vim $HOME/.zshrc"

# Vim (Neovim)
if exist nvim; then
  alias vi='nvim'
  alias vr='nvim -R'
  alias vf='nvim $(fzf)'
fi

# Git
if exist hub; then
  alias git='hub'
fi
alias g='git'
alias gf='git fetch && git diff HEAD..FETCH_HEAD'
alias gup='git pull upstream master'
alias t='tig'

# exa
if exist exa; then
  alias ls='exa -F'
  alias l='exa -1a'
  alias la='ll -a'
  alias lt='ll -T'
fi

# 2fa
if exist 2fa; then
  alias 2fac='2fa -clip'
fi

# Pipenv
if exist pipenv; then
  alias pe='pipenv'
fi

# Docker
if exist docker; then
  alias d='docker'
fi
if exist docker-compose; then
  alias dc='docker-compose'
fi

# direnv
if exist direnv; then
  alias de='direnv'
fi

# Misc
alias sl3='sqlite3 -column -header'
